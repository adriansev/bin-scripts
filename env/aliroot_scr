##
##       ALIROOT
##

export ALICE=${tools}/alice
export GEANT3DIR=${ALICE}/geant3

export ALICE_ROOT=${ALICE}/aliroot
export ALICE_PHYSICS=${ALICE}/aliphysics

export ALIROOT_OCDB_ROOT=${ALICE}/AliRootOCDB

##     AliROOT PATHS
__PATH_ADD ${ALICE_ROOT}/bin
__PATH_ADD ${ALICE_PHYSICS}/bin

##     AliROOT LIBS
__LDLIB_ADD ${GEANT3DIR}/lib64
__LDLIB_ADD ${ALICE_ROOT}/lib
__LDLIB_ADD ${ALICE_PHYSICS}/lib

