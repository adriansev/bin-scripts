##
##       ALIROOT
##

export ALICE=${tools}/alice
export GEANT3DIR=${ALICE}/geant3

export ALICE_ROOT=${ALICE}/aliroot
export ALICE_PHYSICS=${ALICE}/aliphysics

export ALIROOT_OCDB_ROOT=${ALICE}/AliRootOCDB

##     AliROOT PATHS
insert_item_2var PATH ${ALICE_ROOT}/bin
insert_item_2var PATH ${ALICE_PHYSICS}/bin

##     AliROOT LIBS
insert_item_2var LD_LIBRARY_PATH ${GEANT3DIR}/lib64
insert_item_2var LD_LIBRARY_PATH ${ALICE_ROOT}/lib
insert_item_2var LD_LIBRARY_PATH ${ALICE_PHYSICS}/lib

