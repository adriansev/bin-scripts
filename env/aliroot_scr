##
##       ALIROOT
##

export ALICEDIR=${tools}/alice
export GEANT3DIR=${ALICEDIR}/geant3

export ALICE_ROOT=${ALICEDIR}/aliroot
export ALICE_PHYSICS=${ALICEDIR}/aliphysics

export ALIROOT_OCDB_ROOT=${ALICEDIR}/AliRootOCDB

##     AliROOT PATHS
__PATH_ADD ${ALICE_ROOT}/bin
__PATH_ADD ${ALICE_PHYSICS}/bin

##     AliROOT LIBS
__LDLIB_ADD ${GEANT3DIR}/lib64
__LDLIB_ADD ${ALICE_ROOT}/lib
__LDLIB_ADD ${ALICE_PHYSICS}/lib

